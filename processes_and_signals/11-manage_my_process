#!/usr/bin/env bash
# Init script to start, stop, or restart manage_my_process with PID management

PIDFILE="/var/run/my_process.pid"
SCRIPT_PATH="/absolute/path/to/manage_my_process"  # replace with actual path

case $1 in
start)
    $SCRIPT_PATH &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
    ;;
stop)
    [[ -f "$PIDFILE" ]] && kill "$(cat "$PIDFILE")" && rm -f "$PIDFILE"
    echo "manage_my_process stopped"
    ;;
restart)
    [[ -f "$PIDFILE" ]] && kill "$(cat "$PIDFILE")" && rm -f "$PIDFILE"
    $SCRIPT_PATH &
    echo $! > "$PIDFILE"
    echo "manage_my_process restarted"
    ;;
*)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac
