#!/usr/bin/env bash
# Init script to start, stop, or restart manage_my_process with PID management

PIDFILE="/var/run/my_process.pid"
SCRIPT_PATH="$(pwd)/manage_my_process"  # full path to manage_my_process script

start_process() {
    "$SCRIPT_PATH" &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ -f "$PIDFILE" ]; then
        kill "$(cat "$PIDFILE")" 2>/dev/null
        rm -f "$PIDFILE"
        echo "manage_my_process stopped"
    fi
}

restart_process() {
    if [ -f "$PIDFILE" ]; then
        kill "$(cat "$PIDFILE")" 2>/dev/null
        rm -f "$PIDFILE"
    fi
    "$SCRIPT_PATH" &
    echo $! > "$PIDFILE"
    echo "manage_my_process restarted"
}

case "$1" in
start)
    start_process
    ;;
stop)
    stop_process
    ;;
restart)
    restart_process
    ;;
*)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac
